generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
  relationMode = "prisma"
  
}

model Post{
    id               Int @id @default(autoincrement())
    user_id          String
    title            String
    body             String
    upvotes          Int
    downvotes        Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Profile{
    userId           String    @id @default(cuid())
    username         String?
    name             String?
    email            String
    website          String?
    bio              String?
    avatar           String?
    isAdmin          Boolean @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
